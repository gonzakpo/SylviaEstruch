{% extends 'SEstruchWebsiteBundle::adminlayout.html.twig' %}


{% block title %}
{{ parent() }} - Teatro {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Teatro</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Title</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.title }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Foto1</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.foto1 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Foto2</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.foto2 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Foto3</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.foto3 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Mini_alignment</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.minialignment }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('admin_teatro') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('admin_teatro_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('admin_teatro_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}